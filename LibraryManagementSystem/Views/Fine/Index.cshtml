@model IEnumerable<LibraryManagementSystem.Models.FineDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Fine Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Book Title
            </th>
            <th>
                User
            <th>
                @Html.DisplayNameFor(model => model.FineAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Reservation.Book.BookTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reservation.ReservedUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FineAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paid)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FineId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FineId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FineId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
