@model LibraryManagementSystem.Models.BookRequestModel

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-2">
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </div>
    <div class="col-6">
        <h4 style="text-align:center">Add Requested Book</h4>

    </div>
</div>

<hr />
<div class="row justify-content-between">
    <div class="col-md-4 ">
        @{
            string src = "https://covers.openlibrary.org/b/id/" + Model.CoverId.ToString() + "-M.jpg";
        }
        <div class="card-img-top book-cover-2" style="background-image: url(@src)"></div>
        <div class="card-body">
            <h5 class="card-title book-title">@Model.BookTitle</h5>
            <p class="card-text book-author">@Model.Author</p>
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RequestId" />
            <div class="form-group">
                <label asp-for="BookTitle" class="control-label"></label>
                <input asp-for="BookTitle" class="form-control" readonly />
                <span asp-validation-for="BookTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" readonly></input>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" readonly />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publication" class="control-label"></label>
                <input asp-for="Publication" class="form-control" readonly />
                <span asp-validation-for="Publication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookEdition" class="control-label"></label>
                <input asp-for="BookEdition" class="form-control" />
                <span asp-validation-for="BookEdition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RackNo" class="control-label"></label>
                <input asp-for="RackNo" class="form-control" />
                <span asp-validation-for="RackNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CoverId" class="form-control" hidden />
                <span asp-validation-for="CoverId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAdded" />  I hereby Confirm to Add this book
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
