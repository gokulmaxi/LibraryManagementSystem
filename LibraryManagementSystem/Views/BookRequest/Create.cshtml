@model LibraryManagementSystem.Models.BookRequestModel

@{
    ViewData["Title"] = "Create";
}

<h1>Book Your Request</h1>

<link rel="stylesheet" href="~/css/book-ui.css" asp-append-version="true" />
<div class="row justify-content-between">
    <div class="col-md-4 ">
        @{
            string src = "https://covers.openlibrary.org/b/id/" + @ViewBag.CoverId.ToString() + "-M.jpg";
        }
        <div class="card-img-top book-cover-2" style="background-image: url(@src)"></div>
        <div class="card-body">
            <h5 class="card-title book-title">@ViewBag.BookName</h5>
            <p class="card-text book-author">@ViewBag.Author</p>
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookTitle" class="control-label"></label>
                <input asp-for="BookTitle" class="form-control" value="@ViewBag.BookName" readonly />
                <span asp-validation-for="BookTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" value="@ViewBag.Author" readonly />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publication" class="control-label"></label>
                <input asp-for="Publication" class="form-control" value="@ViewBag.Publisher" readonly />
                <span asp-validation-for="Publication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<BookCategory>()" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookEdition" class="control-label"></label>
                <input asp-for="BookEdition" class="form-control" />
                <span asp-validation-for="BookEdition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CoverId" class="form-control" value="@ViewBag.CoverId" hidden />
                <span asp-validation-for="CoverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

